= render "partial/navbar"
.wrapper
  .content.row
    .content-left.col-md-3.offset-md-1
      = render "partial/userPanel", {user: current_user}
      .my-4
        = render partial: "partial/time_trend",locals:{trend: @trend, day_trend: @day_trend, week_trend: @week_trend}
    .content__timeline.col-md-4
      .my-4.bg-light
        = render "partial/tweetForm"
      #tweet_body
        = render partial: "partial/tweet", collection: @tweets
    .content-rihgt.col-md-3.my-3
      = render partial: "partial/recommend"
