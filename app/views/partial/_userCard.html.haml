.card.cardBody{ style: "width: 18rem;"}
  - if user.cover.present?
    = link_to "/users/#{user.id}" ,class: 'thumbnail' do
      = image_tag user.cover.url, class: 'card-img-top image_trimming',alt: "Card image cap", width: "256", height: "100"
  - else
    = link_to "/users/#{user.id}" ,class: 'thumbnail' do
      = image_tag "/images/cover.jpeg", class: 'card-img-top image_trimming',alt: "Card image cap", width: "256", height: "100"
  - if user.avator.present?
    = image_tag user.avator.url, class: 'rounded-circle circlePosition image_trimming',alt: "Cinque Terre", width: "70",height: "70"
  - else
    = image_tag "/images/person.jpg", class: 'rounded-circle circlePosition image_trimming',alt: "Cinque Terre", width: "70",height: "70"
  .card-body
    .card-body-title #{user.name}
    .btn-right
      = render "partial/follow_form" , {user: user}
    %h8.card-text.text-secondary @#{user.username}
    %p.card-text
      = truncate(user.about, length:40)
