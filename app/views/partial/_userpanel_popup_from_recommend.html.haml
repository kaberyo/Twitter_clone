.card.popupcardBody{ style: "width: 20rem;"}
  - if recommend.cover.present?
    = link_to "/users/#{recommend.id}" ,class: 'thumbnail' do
      = image_tag recommend.cover.url, class: 'card-img-top image_trimming',alt: "Card image cap", width: "256", height: "100"
  - else
    = link_to "/users/#{recommend.id}" ,class: 'thumbnail' do
      = image_tag "/images/cover.jpeg", class: 'card-img-top image_trimming',alt: "Card image cap", width: "256", height: "100"
  - if recommend.avator.present?
    = image_tag recommend.avator.url, class: 'rounded-circle circlePosition image_trimming',alt: "Cinque Terre", width: "70",height: "70"
  - else
    = image_tag "/images/person.jpg", class: 'rounded-circle circlePosition image_trimming',alt: "Cinque Terre", width: "70",height: "70"
  .card-body
    .card-body-title #{recommend.name}
    .btn-right
      = render "partial/follow_form" , {user: recommend}
    %h8.card-text.text-secondary @#{recommend.username}
    %p.card-text
      = truncate(recommend.about, length:40)
    .body-bottom.d-md-inline-flex
      %li.nav-item.col-md-4
        = link_to "ツイート", user_path(recommend.id), class: 'text-muted card-link card-link-word'
        = link_to "#{recommend.tweets.count}", user_path(recommend.id), class: 'text-muted card-link card-link-number'
      %li.nav-item.col-md-4
        = link_to "フォロー", following_user_path(recommend.id), class: 'text-muted card-link card-link-word'
        = link_to "#{recommend.following.count}", following_user_path(recommend.id), class: 'text-muted card-link card-link-number'

      %li.nav-item.col-md-4
        = link_to "フォロワー", followers_user_path(recommend.id), class: 'text-muted card-link card-link-word'
        = link_to "#{recommend.followers.count}", followers_user_path(recommend.id), class: 'text-muted card-link card-link-number'
